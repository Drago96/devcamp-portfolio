<div class="app-card-container">
  <div class="card">
    <h1 class="card-header">About me</h1>
    <div class="row card-body">
      <div class="col-md-4">
        <%= image_tag "nature.jpg", width: '100%', alt: "Profile image" %>
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div
                class="progress-bar progress-bar-striped bg-warning"
                role="progressbar"
                aria-valuenow="<%= skill.percent_utilized %>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized %>%"
              >
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8 biography">
        <p>Insert inspirational stuff here.</p>
        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#job-history"
            aria-expanded="false"
            aria-controller="job-history"
          >
            Job History
          </button>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
          >
            Education
          </button>
          <div class="collapse" id="job-history">
            <div class="card card-body card-block">
              My Job History
            </div>
          </div>
          <div class="collapse" id="education">
            <div class="card card-body card-block">
              My Education
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
