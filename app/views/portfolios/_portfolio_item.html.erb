<div class="col-md-4 sortable-card" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 box-shadow">
    <%= image_tag(portfolio_item.thumb_image, class: "card-img-top") unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span>
          <%= link_to  portfolio_item.title, portfolio_show_path(portfolio_item) %>
          <%= portfolio_item.subtitle %>
        </span>
      </p>
    </div>
  </div>
</div>

